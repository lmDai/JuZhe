<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="@dimen/dp_10">

    <TextView
        android:id="@+id/txt_money"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="12.12111"
        android:textColor="@color/item_income_title"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自购订单收益"
            android:textColor="@color/item_income_name"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/txt_create_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:text="2018-10-20 04:34:23"
            android:textColor="@color/item_income_time"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>
</LinearLayout>