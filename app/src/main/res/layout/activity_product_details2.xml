<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_bar_two" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:srlEnablePureScrollMode="true">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_share_text"
                    android:gravity="center|start"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    android:text="分享后不要忘记复制粘贴【评论区文案】"
                    android:textColor="#462F17"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:text="正宗韩式风味 朴家炒年糕 韩式辣酱炒年糕条 年糕火锅 包邮送酱包"
                    android:textSize="@dimen/sp_14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="@dimen/dp_4"
                        android:paddingLeft="@dimen/dp_10"
                        android:text="【抢购价】"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/item_end_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="@dimen/dp_4"
                        android:text="￥5.88"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="@dimen/dp_4"
                        android:paddingLeft="@dimen/dp_10"
                        android:text="【免费下载巨折下单】"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/commission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="@dimen/dp_4"
                        android:text="再返还￥0.07"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <TextView
                    android:id="@+id/original_article"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:text="【类目综合排名第一】传统工艺，口感润滑Q弹，酱香浓郁，香辣不腻，软而不腻，三个月做一次活动速抢！【赠运费险】"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="【抢购地址】http://t.cn/EZV1Fg2"
                    android:textSize="@dimen/sp_14"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="@dimen/dp_4"
                        android:paddingLeft="@dimen/dp_10"
                        android:text="选择图片"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="@dimen/dp_4"
                        android:paddingLeft="@dimen/dp_10"
                        android:text="已选择1张"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/item_pic"
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="@dimen/dp_120"
                    android:layout_margin="@dimen/dp_10"
                    android:src="@drawable/ic_zhanwei_product" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:background="@color/color_message_time_bg"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="@dimen/dp_4"
                        android:text="👇👇👇"
                        android:textSize="@dimen/sp_14" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="@dimen/dp_4"
                            android:text="【抢购价】"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/item_end_price1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="@dimen/dp_4"
                            android:text="￥5.88"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="@dimen/dp_4"
                            android:text="【免费下载巨折下单】"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/commission1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="@dimen/dp_4"
                            android:text="再返还￥0.07"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="@dimen/dp_4"
                        android:text="-----------------"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tapkoul"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="@dimen/dp_4"
                        android:paddingLeft="@dimen/dp_10"
                        android:text="复制这条评论信息，￥j0r3bS3TJD6￥，打开【手机淘宝】即可查看"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/txt_copy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@drawable/bg_copy"
                        android:gravity="center"
                        android:text="复制评论【淘口令】"
                        android:textColor="#452B0C"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_round_white"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="分享图文到"
                        android:textColor="@color/color_share_title"
                        android:textSize="@dimen/sp_14" />

                    <LinearLayout
                        android:id="@+id/dialog_zhifubao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:minHeight="@dimen/dp_48">

                        <TextView
                            android:id="@+id/txt_share_wechat"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/ic_share_wechat"
                            android:drawablePadding="@dimen/dp_5"
                            android:gravity="center"
                            android:text="微信朋友"
                            android:textColor="#747474"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/txt_share_wechat_circle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/ic_share_wechat_circle"
                            android:drawablePadding="@dimen/dp_5"
                            android:gravity="center"
                            android:text="朋友圈"
                            android:textColor="#747474"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/txt_share_qq"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/ic_share_qq"
                            android:drawablePadding="@dimen/dp_5"
                            android:gravity="center"
                            android:text="QQ好友"
                            android:textColor="#747474"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/txt_share_qzone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/ic_share_qzone"
                            android:drawablePadding="@dimen/dp_5"
                            android:gravity="center"
                            android:text="QQ空间"
                            android:textColor="#747474"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</android.support.design.widget.CoordinatorLayout>
