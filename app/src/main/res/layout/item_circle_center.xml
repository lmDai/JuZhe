<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_white"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center|start">

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_zhanwei_potential_img" />

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/img_head"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="小编推荐"
                        android:textColor="@color/item_circle_title"
                        android:textSize="@dimen/sp_14" />

                    <LinearLayout
                        android:id="@+id/ll_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:background="@drawable/bg_btn_share"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp_6"
                        android:paddingTop="@dimen/dp_4"
                        android:paddingRight="@dimen/dp_6"
                        android:paddingBottom="@dimen/dp_4">

                        <TextView
                            android:id="@+id/txt_share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="一键分享"

                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_12" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:src="@drawable/ic_share" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:background="@drawable/bg_circle_tag"
                    android:gravity="center"
                    android:text="拼多多"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_10"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预计赚：¥12.89"
                    android:textColor="@color/item_circle_money"
                    android:textSize="@dimen/sp_12"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_create_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今天 16：55"
                android:textColor="@color/item_circle_time"
                android:textSize="@dimen/sp_10" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_40">

        <TextView
            android:id="@+id/txt_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_title"
            android:layout_margin="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_58"
            android:layout_toRightOf="@id/img_head"
            android:lineSpacingExtra="@dimen/dp_2"
            android:maxLines="3"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_14"
            tools:text="测试数据测试数据测试数据家测试数据测试书测试数据测试数据" />

        <com.juzhe.www.ui.widget.MultiImageView
            android:id="@+id/multiply"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>


</LinearLayout>